{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./build",
        "types": [
            "node"
        ],
        "allowImportingTsExtensions": false
    },
    "include": [
        "server/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}